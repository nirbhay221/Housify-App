<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="6dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/propertyPostedImage"
                android:layout_width="345dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:cropToPadding="true">
            </ImageView>

            <TextView
                android:id = "@+id/propertyPostedType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text = " Apartment"
                android:textSize="13dp"
                android:textStyle="bold">

            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id = "@+id/apartmentPostedTitleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Beacon St. Apartments"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold">

                </TextView>
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/apartmentPostedLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Beacon St."
                        android:layout_marginTop="15dp"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/likeButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_like"
                        android:contentDescription="Like Button"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewPostedApartmentInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="View More Info"
                    android:textSize="13dp"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:id="@+id/propertyViewPostedApartmentPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Active Price"
                    android:textSize="13dp"
                    android:layout_marginLeft="190dp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/propertyPostedApartmentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "$ 1234"
                android:textSize="13dp"
                android:layout_marginLeft="290dp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>